{% extends 'base.html.twig' %}

{% block title %}Creatures{% endblock %}

{% block body %}
    <h1>Creatures</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ creature.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ creature.nom }}</td>
            </tr>
            <tr>
                <th>Textelead</th>
                <td>{{ creature.textelead }}</td>
            </tr>
            <tr>
                <th>Textesuite</th>
                <td>{{ creature.textesuite }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ creature.datecreation ? creature.datecreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ creature.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ creature.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('creatures_index') }}">back to list</a>

    <a href="{{ path('creatures_edit', {'id': creature.id}) }}">edit</a>

    {{ include('creatures/_delete_form.html.twig') }}
{% endblock %}
