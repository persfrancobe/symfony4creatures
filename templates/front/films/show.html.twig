{% extends 'front/base.html.twig' %}
{% block title %} {{ film.slug |upper }} {% endblock %}
{% block body %}
    <!-- film Heading -->
    <!-- Title -->
    <h1 class="mt-4">{{ film.titre }}</h1>
    <hr>
    <!-- Post Content -->
    <!-- Project One -->
    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('app_films_show',{id:film.id,slug:film.slug}) }}">
                <img class="img-fluid rounded mb-3 mb-md-0" src="{{ asset('build/assets/images/film_'~random(1,3)~'.jpg') }}" alt="{{ film.slug }}">
            </a>
        </div>
        <div class="col-md-8">
            <p class="lead">{{ film.synopsis }}</p>
          <hr/>
            <h2>Creature</h2>
            <ul>
                {% for cr in film.creatures %}
                    <li><a href="{{ path('app_creatures_show',{id:cr.id,slug:cr.slug}) }}">{{ cr.nom }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- /.row -->
    <hr>
{% endblock %}