<form style="display:inline-block;" method="post" action="{{ path('app_admin_creatures_delete', {'id': creature.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ creature.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
